#!/bin/sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Add www user.
#======================================================================================================================

bcg-adduser www


#======================================================================================================================
# Get Nginx Version.
#======================================================================================================================

cd /tmp

VERSION=$(cat VERSION)
bcg-debug "Nginx version ${VERSION}."


#======================================================================================================================
# Install Nginx and dependencies.
#======================================================================================================================

bcg-echo "Installing Nginx v${VERSION}..."
apk add --no-cache \
    ca-certificates \
    nginx=${VERSION}
mkdir -p /var/run/nginx
bcg-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bcg-debug "Cleaning up default Nginx configuration and files."
rm -rf /etc/nginx/conf.d/* /etc/nginx/http.d/* /var/www/*


#======================================================================================================================
# Link /var/www/localhost to /www.
#======================================================================================================================

bcg-debug "Linking /www to /var/www/localhost."
ln -s /www /var/www/localhost
