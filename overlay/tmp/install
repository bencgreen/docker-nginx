#!/bin/sh

set -eo pipefail


#======================================================================================================================
# Add www user
#======================================================================================================================

bcg-echo "Adding www user..."
bcg-adduser www
bcg-done


#======================================================================================================================
# Install Nginx and dependencies
#======================================================================================================================

NGINX_VERSION=$(cat /tmp/NGINX_BUILD)
bcg-echo "Installing Nginx v${NGINX_VERSION}..."
apk add --no-cache \
    ca-certificates \
    nginx=${NGINX_VERSION}
mkdir -p /var/run/nginx
bcg-done


#======================================================================================================================
# Cleanup
#======================================================================================================================

rm -rf /etc/nginx/conf.d/* /etc/nginx/http.d/* /var/www/*


#======================================================================================================================
# Link /var/www/localhost to /www
#======================================================================================================================

ln -s /www /var/www/localhost
